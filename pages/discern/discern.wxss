/* 弹窗盒子 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
 }
 /* 弹窗 */
 .modalDlg{
  width: 480rpx;
  height: 420rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
 }
 /* 弹窗中的图片 */
 .modalDlg image{
   width: 200rpx;
   height: 200rpx;
 }
 /* 弹窗里面的按钮 */
 .modalDlg button{
   margin-top: 20rpx;
   margin-bottom: 20rpx;
   border-radius: 10rpx;
   font-size: 34rpx;
   background-color: #002FA6;
   color: #ffffff;
 }
 .percentage_hint{
   font-size: 35rpx;
 }
 .percentage_text{
   text-align: center;
   font-size: 44rpx;
 }