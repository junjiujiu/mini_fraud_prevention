 }
 .taobao-list-info{
  float: left;
  margin-left: 20rpx;
  border: 1rpx solid #646464;
  margin-top: 20rpx;
  margin-bottom: 75rpx;
  position: relative;
 }
 
 .taobao-list-photo{
  width: 350rpx;
