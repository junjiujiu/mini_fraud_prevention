/* pages/simulationScenceList/simulationScenceList.wxss */
.scenceList_colum{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  text-align: center;
  /* height: 150rpx; */
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
.scenceList_colum_void{
  flex: 1;
}
.scenceList_colum_one{
  background-color: cornflowerblue;
  color: aliceblue;
  width: 300rpx;
  height: 300rpx;
  font-size: 39rpx;
  flex: 5;
  margin-bottom: 20rpx;
  text-align: center;
  display: flex;
  /* padding-left: 30rpx; */
  align-items: center;
  margin-top: 20rpx;
  font-weight: 700;
  justify-items: center;
  box-shadow: 4px 4px 15rpx 1px #afafaf;
  border: 4rpx solid #646464;
  border-radius: 10rpx;
  position: relative;
}
.scenceList_colum_one text{
  text-align: center;
  position: absolute;
  z-index: 1;
}
.scenceList_colum_one image{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  opacity:0.7;
  /* z-index: -1; */
}
.taobaolist{
  margin-top: 20rpx;
 }
